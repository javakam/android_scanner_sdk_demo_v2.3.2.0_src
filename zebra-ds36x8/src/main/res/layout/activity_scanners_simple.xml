<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_gray"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray">

        <TextView
            android:id="@+id/barcodesListCount"
            style="@style/roboto_regular_16dp"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="18dp"
            android:gravity="center_vertical"
            android:text="Barcodes Scanned: 0" />
    </TableRow>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/inactive_background"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp">

        <com.richfit.zebra_ds36x8.utils.RichEditText
            android:id="@+id/edt_scan_result"
            style="@style/RightRichEditTextItemStyle3" />
    </LinearLayout>

    <TableRow
        style="@style/light_gray_background_row"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:gravity="center_vertical|center_horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnClearList"
            style="@style/style_blue_gray_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="18dp"
            android:layout_marginLeft="45dp"
            android:layout_marginRight="45dp"
            android:layout_marginTop="18dp"
            android:onClick="clearData"
            android:text="@string/clearData"
            android:textSize="24sp" />
    </TableRow>
</LinearLayout>
