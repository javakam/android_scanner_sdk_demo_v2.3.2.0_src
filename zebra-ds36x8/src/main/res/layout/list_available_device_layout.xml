<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="horizontal">

    <CheckBox
        android:id="@+id/chk_connected"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginRight="5dp"
        android:layout_weight="10"
        android:clickable="false"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginRight="5dp"
        android:layout_weight="80"
        android:background="@android:color/white"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_scanner_name"
            style="@style/roboto_medium_16dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="CS4070:XXXXXXXXXXXXXXXX" />

        <TextView
            android:id="@+id/txt_scanner_hw_serial"
            style="@style/roboto_regular_16dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:paddingRight="5dp"
            android:text="CS:DS:DS:DS:DS:DS" />
    </LinearLayout>

    <ImageView
        android:id="@+id/type_icon"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/app_margin_right"
        android:layout_weight="10" />
</LinearLayout>